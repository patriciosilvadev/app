{
  "name": "weekday-app",
  "version": "0.1.0",
  "description": "Weekday, a hackable team messaging platform",
  "main": "src/js/electron.js",
  "scripts": {
    "build:prod": "webpack --config webpack.config.js",
    "build:dev": "webpack --config webpack.config.dev.js",
    "build:electron": "webpack --config webpack.config.electron.js",
    "watch:prod": "webpack -w --config webpack.config.js",
    "watch:dev": "webpack -w --config webpack.config.dev.js",
    "watch:electron": "webpack -w --config webpack.config.electron.js",
    "serve:prod": "webpack-dev-server --config webpack.config.js --hot --inline --port 3000",
    "serve:dev": "webpack-dev-server --config webpack.config.dev.js --hot --inline --port 3000",
    "serve:electron": "webpack-dev-server --config webpack.config.electron.js --hot --inline --port 3000",
    "dev": "npm run watch:dev | npm run serve:dev",
    "dev:electron": "npm run watch:electron | npm run serve:electron | npm run electron",
    "test": "jest",
    "lint": "eslint ./src",
    "deploy:prepare": "aws s3 rm --recursive s3://weekday-web --profile weekday-cli",
    "deploy:upload": "aws s3 cp --metadata-directive REPLACE --cache-control max-age=0,s-maxage=0 ./dist s3://weekday-web --grants read=uri=http://acs.amazonaws.com/groups/global/AllUsers --recursive --profile weekday-cli",
    "deploy": "npm run build:prod && npm run deploy:prepare && npm run deploy:upload",
    "electron": "NODE_ENV=dev electron .",
    "pack:mac": "electron-builder --mac --dir",
    "pack:win": "electron-builder --win --dir",
    "pack:linux": "electron-builder --linux --dir",
    "release": "electron-builder",
    "release:all": "electron-builder -mwl"
  },
  "build": {
    "appId": "com.weekday.${name}",
    "productName": "Weekday",
    "copyright": "Copyright Â© 2020 ${author}",
    "linux": {
      "category": "Productivity",
      "desktop": {
        "Comment": "Weekday, a hackable team messaging platform.",
        "Name": "Weekday",
        "StartupNotify": "true",
        "Terminal": "false",
        "Type": "Application",
        "Categories": "Messaging;Office;"
      },
      "icon": "build/icon.png",
      "executableName": "weekday-app",
      "maintainer": "support@weekdayapp.com",
      "target": [
        "AppImage"
      ]
    },
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "build/icon.ico",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "asar": false,
      "target": "nsis",
      "icon": "build/icon-win.ico"
    },
    "nsis": {
      "installerIcon": "build/icon-win.ico",
      "installerHeaderIcon": "build/icon-win.ico",
      "deleteAppDataOnUninstall": true
    },
    "files": [
      "dist/*",
      "node_modules/**/*",
      "src/js/electron.js",
      "build/*"
    ],
    "directories": {
      "output": "release",
      "buildResources": "build"
    }
  },
  "homepage": "./",
  "author": "Jo du Plessis",
  "license": "ISC",
  "repository": "https://github.com/weekday/web",
  "url": "https://github.com/weekday/web",
  "dependencies": {
    "@joduplessis/keg": "0.0.4",
    "@joduplessis/zero": "0.0.0",
    "@sentry/browser": "^5.5.0",
    "@weekday/elements": "^0.8.12",
    "apollo-cache-inmemory": "^1.2.10",
    "apollo-client": "^2.4.2",
    "apollo-link": "^1.2.13",
    "apollo-link-http": "^1.5.5",
    "array-move": "^3.0.0",
    "chroma-js": "^2.0.3",
    "emoji-mart": "^2.11.1",
    "eventemitter3": "^4.0.0",
    "formik": "^1.5.7",
    "graphql": "^14.0.2",
    "graphql-tag": "^2.10.0",
    "history": "^4.7.2",
    "immer": "^3.1.3",
    "install": "^0.13.0",
    "janus-gateway-js": "^2.0.1",
    "marked": "^0.7.0",
    "moment": "^2.22.2",
    "moment-range": "^4.0.1",
    "moment-timezone": "^0.5.21",
    "mqtt": "^3.0.0",
    "npm": "^6.14.6",
    "pouchdb": "^7.0.0",
    "pouchdb-find": "^7.0.0",
    "react": "^16.8.6",
    "react-apollo": "^2.2.4",
    "react-dom": "^16.8.6",
    "react-feather": "git+https://github.com/joduplessis/react-feather.git",
    "react-markdown": "^4.2.2",
    "react-redux": "^7.1.0",
    "react-router-dom": "^5.1.2",
    "react-sortable-hoc": "^1.11.0",
    "redux": "^4.0.0",
    "redux-thunk": "^2.3.0",
    "rxjs": "^6.5.2",
    "uuid": "^3.3.3",
    "webrtc-adapter": "^7.6.3",
    "yup": "^0.27.0"
  },
  "devDependencies": {
    "@babel/core": "^7.1.0",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.4.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/runtime": "^7.4.2",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.2",
    "babel-plugin-syntax-async-functions": "^6.13.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "classnames": "^2.2.6",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^5.1.1",
    "css-loader": "^1.0.0",
    "dotenv-webpack": "^1.7.0",
    "electron": "^6.0.12",
    "electron-builder": "^22.6.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "enzyme-to-json": "^3.3.5",
    "eslint": "^5.9.0",
    "eslint-loader": "^2.1.1",
    "eslint-plugin-prettier": "^3.1.0",
    "extract-loader": "^3.1.0",
    "file-loader": "^3.0.1",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.2.0",
    "jest": "^24.8.0",
    "jest-puppeteer": "^4.3.0",
    "less": "^2.7.1",
    "less-loader": "^4.1.0",
    "loaders.css": "^0.1.2",
    "merge-stream": "^1.0.1",
    "mini-css-extract-plugin": "^0.9.0",
    "node-sass": "^4.9.3",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.15.2",
    "pretty-quick": "^1.8.0",
    "prop-types": "^15.7.2",
    "puppeteer": "^1.19.0",
    "react-hot-loader": "^4.3.6",
    "react-loaders": "^3.0.1",
    "redux-logger": "^3.0.6",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.0",
    "styled-components": "^4.1.3",
    "url-loader": "^1.1.1",
    "webpack": "^4.18.0",
    "webpack-bundle-analyzer": "^3.6.0",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.14",
    "workbox-webpack-plugin": "^4.3.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged --print-width 120"
    }
  }
}
